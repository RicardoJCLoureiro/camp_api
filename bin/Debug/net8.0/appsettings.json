{
  // Logging levels used by Microsoft.Extensions.Logging
  "Logging": {
    "LogLevel": {
      // App default log level
      "Default": "Information",
      // Reduce ASP.NET Core framework noise
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Host filtering for reverse-proxy scenarios; "*" allows any host header
  "AllowedHosts": "*",

  // CORS: origins allowed to call this API from browsers
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000", // local web app (http)
      "https://localhost:3000", // local web app (https)
      "https://a431-94-132-54-138.ngrok-free.app", // temporary tunnel URL
      "http://10.0.2.2:19000" // Android emulator Expo (host loopback)
    ]
  },

  // Frontend-specific URLs used by email templates / deep links
  "Frontend": {
    "ResetPasswordUrl": "https://localhost:3000/forgotPassword"
  },

  // Database connection (non-secret dev default). 
  // In Development, we expect this to be overridden by user-secrets.
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CAMP_DB;User Id=CAMP_ADMIN;Password=__dev_only__;TrustServerCertificate=True;"
  },

  // JWT settings used by authentication middleware
  "Jwt": {
    // The signing key (HMAC) â€” must be overridden via user-secrets in Development/Production
    "Key": "__dev_only__",
    // Token issuer (who created the token)
    "Issuer": "CAMP_API",
    // Intended audience (who the token is for, e.g., frontend/app)
    "Audience": "CAMP_CLIENT",
    // Access token lifetime in minutes
    "ExpireMinutes": 120
  },

  // SMTP config used by EmailService (transactional emails: reset, etc.)
  "Smtp": {
    "Host": "myb4y.com",
    "Port": 587,
    "User": "__dev_only__", // override via user-secrets / env var
    "Password": "__dev_only__", // override via user-secrets / env var
    "EnableSsl": true, // STARTTLS on port 587
    "From": "__dev_only__" // default From: address for outbound emails
  }
}
